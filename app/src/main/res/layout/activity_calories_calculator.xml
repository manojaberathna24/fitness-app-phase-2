<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/weightInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your weight (kg)"
        android:inputType="numberDecimal"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/durationInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter duration (minutes)"
        android:inputType="numberDecimal"
        android:minHeight="48dp" />

    <!-- Adding some space before the button using marginTop -->
    <Button
        android:id="@+id/calculateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate Calories"
        android:layout_marginTop="50dp" /> <!-- Adjust this value as needed -->

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calories Burned: "
        android:textSize="18sp"
        android:paddingTop="16dp" />

    <!-- Adding the ImageView to display your calory.jpg image -->
    <ImageView
        android:id="@+id/photoImageView"
        android:layout_width="wrap_content"
        android:layout_height="399dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/calory" />

</LinearLayout>
